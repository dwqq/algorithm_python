#include <vector>
#include <algorithm>
using namespace std;

int main(){
 int m, n;

 while ( cin >> m >> n ){
  int input;
  vector<int> time;
  for (int i = 0; i < n; i++){
   cin >> input;
   time.push_back(input);
  }

  sort(time.begin(), time.end());

  int len = time.size();
  int index = len % m - 1;
  int res = 0;
  for (int i = index; i < len; i = i + 3){
   res += time[i];
  }

  cout << res << endl;
 }

 return 0;
}
